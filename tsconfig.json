{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@classum/api-interfaces": ["libs/api-interfaces/src"],
      "@classum/api-interfaces/*": ["libs/api-interfaces/src/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
